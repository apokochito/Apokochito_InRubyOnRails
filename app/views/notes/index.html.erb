<body id="fondo">
<p id="notice"><%= notice %></p>
<h1>My Notes</h1>
<table>
  <thead>
    <tr>
	    <th>Tasks --></th>
      <th>To do</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.task %></td>
        <td><%= note.done %></td>
        <td><%= link_to 'Show', note %></td>
        <td><%= link_to 'Edit', edit_note_path(note) %></td>
        <td><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Note', new_note_path , class:"superlink" %>
</body>
